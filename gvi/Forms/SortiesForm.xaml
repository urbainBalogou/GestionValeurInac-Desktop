<Window x:Class="gvi.SortiesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gvi"
        mc:Ignorable="d"
        Icon="/Authentification/Armoiries-du-Togo.png"
        Title="Sortie" MinHeight="500" Width="1103" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les labels qui agissent comme des liens -->
        <Style x:Key="LinkLabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#FF707070"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFFFA500"/>
                    <!-- Changer de couleur au survol -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="False">
        <!-- Menu de navigation sur la gauche -->
        <StackPanel DockPanel.Dock="Left" Width="137" Background="#FF1288F0">
            <Label x:Name="type_val" Style="{StaticResource LinkLabelStyle}" Content="Type valeur"  MouseLeftButtonDown="type_val_MouseLeftButtonDown"/>
            <Label x:Name="txtvaleur" Style="{StaticResource LinkLabelStyle}" Content="Valeur Inactive" MouseLeftButtonDown="txtvaleur_MouseLeftButtonDown"/>
            <Label x:Name="txtcommune" Style="{StaticResource LinkLabelStyle}" Content="Commune" MouseLeftButtonDown="txtcommune_MouseLeftButtonDown"/>
            <Label x:Name="txtdemandes" Style="{StaticResource LinkLabelStyle}" Content="Demandes"  MouseLeftButtonDown="txtdemandes_MouseLeftButtonDown"/>
            <Label x:Name="txtentree" Style="{StaticResource LinkLabelStyle}" Content="Entrées" Height="35"  MouseLeftButtonDown="txtentree_MouseLeftButtonDown"/>
            <Label x:Name="employe" Style="{StaticResource LinkLabelStyle}" Content="Employés" Height="35" MouseLeftButtonDown="employe_MouseLeftButtonDown"/>
            <Label x:Name="txtfonc" Style="{StaticResource LinkLabelStyle}" Content="Fonctions" Height="35" MouseLeftButtonDown="txtfonc_MouseLeftButtonDown"/>
        </StackPanel>

        <!-- Contenu principal -->
        <Canvas Width="850">
            <!-- Zone de recherche -->
            <TextBox x:Name="rechercher" Height="29" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="10" Width="220" TextChanged="rechercher_TextChanged"/>
            <Button x:Name="btnrefresh" Content="Rafraichir" Canvas.Left="250" Canvas.Top="10" Click="Button_Click" Height="29" Width="80"/>
            <Button x:Name="btnsort" Content="Ajouter une nouvelle sortie" Canvas.Left="450" Width="220" FontStyle="Italic" Background="{x:Null}" BorderThickness="1,1,1,1" FontWeight="UltraBold" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnsort_Click"/>

            <!-- Zone de filtrage par date -->
            <Label Content="Date début:" Canvas.Left="10" Canvas.Top="45" FontWeight="Bold"/>
            <DatePicker x:Name="datePickerStart" Canvas.Left="80" Canvas.Top="45" Width="150"/>
            <Label Content="Date fin:" Canvas.Left="250" Canvas.Top="45" FontWeight="Bold"/>
            <DatePicker x:Name="datePickerEnd" Canvas.Left="320" Canvas.Top="45" Width="150"/>
            <Button x:Name="btnfiltre" Content="Filtrer" Canvas.Left="480" Canvas.Top="45" Width="80" Click="btnfiltre_Click"/>

            <!-- Bouton Imprimer -->
            <Button x:Name="btnPrint" Content="Imprimer" Canvas.Left="570" Canvas.Top="45" Width="80" Click="btnPrint_Click"/>

            <!-- ListView pour afficher les sorties -->
            <ListView x:Name="listViewSorties" Canvas.Top="85" Canvas.Left="10" Height="400" Width="872" VerticalAlignment="Center" HorizontalAlignment="Left" MouseDoubleClick="listViewSorties_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Commune" DisplayMemberBinding="{Binding Commune}" Width="150"/>
                        <GridViewColumn Header="Valeurs Inactives" DisplayMemberBinding="{Binding Valeurs}" Width="250"/>
                        <GridViewColumn Header="Quantités" DisplayMemberBinding="{Binding Quantites}" Width="150"/>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateSortie}" Width="150"/>
                        <GridViewColumn Header="Employé" DisplayMemberBinding="{Binding Employe}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Canvas>
    </DockPanel>
</Window>
